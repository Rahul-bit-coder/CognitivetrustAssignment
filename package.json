{
  "name": "secure-code-assistant",
  "displayName": "Secure Code Assistant",
  "description": "Runs Semgrep on JS/TS files and shows diagnostics in VS Code",
  "version": "0.0.1",
  "publisher": "Rahul",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other", "Linters"],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:json",
    "onCommand:secagent.enrichPrompt",
    "onCommand:secagent.rescanActive"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "secagent.enrichPrompt",
        "title": "Secure Code Assistant: Enrich Prompt"
      },
      {
        "command": "secagent.rescanActive",
        "title": "Secure Code Assistant: Rescan Active File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.4.2",
    "@types/vscode": "^1.80.0",
    "vscode-test": "^1.6.0"
  }
}
